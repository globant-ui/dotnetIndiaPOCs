@model IEnumerable<BusinessEntities.CompanyStockModel>


@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-md-3">
        <h2>Top Stocks</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GainPercentage)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                           <a asp-action="Details" asp-route-id="@item.CompanyID">@Html.DisplayFor(modelItem => item.CompanyName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GainPercentage)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
